@model PakinProject.Models.Order

<h1>Create Order</h1>

<form asp-action="Create" method="post">
    <div>
        <label for="CustomerID">Customer ID (Email)</label>
        <!-- แสดงอีเมลของผู้ใช้ที่เข้าสู่ระบบ -->
        <input type="email" id="CustomerID" name="CustomerID"
               value="@ViewBag.CustomerEmail"
               readonly required />
    </div>
    <div>
        <label for="ProductCode">Product</label>
        <select id="ProductCode" name="ProductCode" required>
            <option value="">-- Select Product --</option>
            @foreach (var product in ViewBag.Products)
            {
                <option value="@product.ProductCode">
                    @product.ProductName (@product.Price)
                </option>
            }
        </select>
    </div>
    <div>
        <label for="Quantity">Quantity</label>
        <input type="number" id="Quantity" name="Quantity"
               min="1" required />
    </div>
    <div>
        <label for="ShippingAddress">Shipping Address</label>
        <textarea id="ShippingAddress" name="ShippingAddress"
                  required></textarea>
    </div>
    <button type="submit">Submit</button>
</form>
