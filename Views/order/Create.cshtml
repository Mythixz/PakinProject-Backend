@model PakinProject.Models.CheckoutDTO

<h2>Create Order</h2>

<form asp-action="ProcessOrder" method="post">
    <div>
        <label for="UserEmail">User Email</label>
        <input asp-for="UserEmail" id="UserEmail" type="email" class="form-control" required />
    </div>
    <div>
        <label for="TotalPrice">Total Price</label>
        <input asp-for="TotalPrice" id="TotalPrice" type="number" class="form-control" required />
    </div>
    <div>
        <label for="ShippingAddress">Shipping Address</label>
        <textarea asp-for="ShippingAddress" id="ShippingAddress" class="form-control"></textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Create Order</button>
    </div>
</form>
