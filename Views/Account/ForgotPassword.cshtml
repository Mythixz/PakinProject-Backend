@model LoginViewModel
@{
    Layout = "~/Views/Account/_Layout.cshtml";
}
<body>
    <!-- Fullscreen Background -->
    <div class="bg-container">
        <img src="/landingpage/img/bg-forgotpassword.jpg" alt="Background" class="bg-fullscreen">
    </div>

    <!-- Forgot Password Card -->
    <div class="container">
        <div class="login-card">
            <h2>ลืมรหัสผ่าน</h2>
            <p>กรุณากรอกอีเมลของคุณเพื่อรับลิงก์สำหรับรีเซ็ตรหัสผ่าน!</p>

            <!-- Error Message -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label for="Email">อีเมล:</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="กรอกอีเมลของคุณ">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">ส่งลิงก์รีเซ็ตรหัสผ่าน</button>
                </div>
            </form>

            <div class="forgot-password-notification">
                <p class="text-center mt-3">
                    จำรหัสผ่านได้แล้ว?
                    <a href="@Url.Action("Login", "Account")" class="text-primary">เข้าสู่ระบบที่นี่</a>
                </p>
            </div>
        </div>
    </div>
</body>