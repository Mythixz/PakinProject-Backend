@{
    ViewData["Title"] = "รีเซ็ตรหัสผ่าน";
    Layout = "~/Views/Account/_Layout.cshtml";
}
<body>
    <!-- Fullscreen Background -->
    <div class="bg-container">
        <img src="/landingpage/img/bg-resetpassword.jpg" alt="Background" class="bg-fullscreen">
    </div>

    <!-- Reset Password Card -->
    <div class="container">
        <div class="login-card">
            <h2>รีเซ็ตรหัสผ่าน</h2>
            <p>กรุณากรอกรหัสผ่านใหม่เพื่อดำเนินการรีเซ็ต</p>

            <form asp-action="ResetPassword" method="post">
                <div class="form-group">
                    <label for="NewPassword">รหัสผ่านใหม่:</label>
                    <input type="password" id="NewPassword" name="newPassword" class="form-control" placeholder="กรอกรหัสผ่านใหม่" required />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">รีเซ็ต</button>
                </div>
            </form>
        </div>
    </div>
</body>