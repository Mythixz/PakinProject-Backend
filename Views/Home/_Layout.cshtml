<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Official Pakin Gaming Gears - The best Gaming Gears in the Universe.</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Pakin Gaming Gears, Gaming Accessories, Next-Gen Gaming Solutions" name="keywords">
    <meta content="Discover the best gaming gears and accessories from Pakin - Your ultimate destination for next-gen gaming solutions!" name="description">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        /* Hide checkbox */
        #closeWatermark {
            display: none;
        }

        /* Watermark Container */
        .watermark-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.85);
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        /* Hide watermark when checkbox is checked */
        #closeWatermark:checked ~ .watermark-container {
            opacity: 0;
            visibility: hidden;
        }

        .notice-card {
            width: 400px;
            max-width: 90%;
            background: linear-gradient(135deg, #2e971c, #0a1e06);
            border-radius: 30px;
            box-shadow: 10px 10px 20px rgba(25, 103, 200, 0.8), -10px -10px 20px rgba(102, 181, 255, 0.8);
            text-align: center;
            padding: 20px;
        }

        .icon-circle {
            display: flex;
            justify-content: center; /* Align items horizontally in the center */
            align-items: center; /* Align items vertically in the center */
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, #38ab25, #1e6618);
            box-shadow: inset 5px 5px 10px rgba(20, 80, 30, 0.9), inset -5px -5px 10px rgba(40, 140, 50, 0.8);
            margin: 0 auto 20px;
            border-radius: 50%;
        }


        .icon-circle i {
            font-size: 36px;
            color: white;
        }

        .watermark-title {
            font-size: 24px;
            font-weight: bold;
            color: white;
            margin-bottom: 10px;
        }

        .watermark-subtitle {
            font-size: 16px;
            color: white;
            margin-bottom: 20px;
        }

        .watermark-btn {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 20px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: center;
            display: inline-block;
        }

        .watermark-btn:hover {
            background-color: #44d62c;
        }
    </style>

    @await Html.PartialAsync("__css")
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner"></div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    @await Html.PartialAsync("__Topbar")
    <!-- Topbar End -->
    @await Html.PartialAsync("__UnderNavbar")
    <!-- Navbar & Carousel Start -->
    @await Html.PartialAsync("__Navbar")
    <!-- Navbar & Carousel End -->
    @RenderBody()

    <!-- Footer Start -->
    @await Html.PartialAsync("__Footer")
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- Watermark -->
    <!-- Checkbox to control visibility -->
    <input type="checkbox" id="closeWatermark">

    <!-- Watermark -->
    <div class="watermark-container">
        <div class="notice-card">
            <div class="icon-circle">
                <i class="fa-solid fa-triangle-exclamation fa-bounce"></i>
            </div>
            <h1 class="watermark-title">ใช้ในการเรียนเท่านั้น</h1>
            <p class="watermark-subtitle">ไม่มีการซื้อขายทุกประเภทจริง</p>
            <label for="closeWatermark" class="watermark-btn">ปิด</label>
        </div>
    </div>


    @await Html.PartialAsync("__js")
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
