@model PakinProject.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1 class="text-center my-4">Edit Product</h1>

<div class="container">
    <h4>Product Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="ProductCode" class="control-label"></label>
                    <input asp-for="ProductCode" class="form-control" />
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- เพิ่มฟิลด์หมวดหมู่ -->
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" asp-items="ViewBag.Categories" class="form-control"></select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>



                <!-- เพิ่มฟิลด์จำนวนสินค้าในสต็อก -->
                <div class="form-group">
                    <label asp-for="StockQuantity" class="control-label"></label>
                    <input asp-for="StockQuantity" class="form-control" type="number" min="0" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="uploadedImage" class="control-label">Upload Image</label>
                    <input type="file" id="uploadedImage" name="UploadedImage" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.ImageBase64))
                    {
                        <p class="mt-2">Current Image:</p>
                        <img src="data:image/png;base64,@Model.ImageBase64" style="width: 100px; height: auto;" alt="Product Image" />
                    }
                </div>

                <div class="form-group" style="margin-top: 20px">
                    <input type="submit" value="Save" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
