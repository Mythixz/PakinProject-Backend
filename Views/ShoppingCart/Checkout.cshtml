@model List<PakinProject.Models.CartItemDto>

@{
    ViewData["Title"] = "Checkout";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total Price: @ViewBag.TotalPrice.ToString("C")</h3>

    <!-- ฟอร์มเพื่อไปหน้าการชำระเงิน -->
    <form method="get" action="@Url.Action("Index", "Payment")">
        <input type="hidden" name="totalPrice" value="@ViewBag.TotalPrice" />
        <button type="submit" class="btn btn-primary">Proceed to Payment</button>
    </form>

}
else
{
    <p>Your cart is empty.</p>
}
